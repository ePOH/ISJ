        dv = SQL_DS_Projects.Select(DataSourceSelectArguments.Empty)
        Dim tt As Integer
        tt = dv.Count
        If dv.Count <> 0 AndAlso DDL_PGS.Items.FindByValue(dv.Table.Rows(1)("Project_ID")) IsNot Nothing Then
            DDL_PGS.SelectedValue = dv.Table.Rows(1)("Project_ID")
        End If

    End Sub

